<%= turbo_stream.replace "__#{dom_id(@user)}" do %>
  <%= render partial: 'line', locals: {user: @user } %>
<% end %>

<%= turbo_stream.replace "flash_notices" do %>
  <%= render partial: "layouts/flash_notices" %>
  <% if @user.errors.any? %>
  <%= render partial: "errors", locals: {resource: @user} %>
  <% end %>
<% end %>
